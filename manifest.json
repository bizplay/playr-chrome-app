{
  "manifest_version": 2,
  "name": "Playr",
  "short_name": "Playr",
  "description": "Digital signage kiosk Chrome OS app for content from playr.biz",
  "app": {
    "background": {
      "scripts": ["javascript/background.js"],
      "persistent": false
    }
  },
  "version": "0.9.9.1",
  "author": {
    "name": "Playr.biz",
    "email": "support@playr.biz"
  },
  "kiosk_enabled": true,
  "offline_enabled": true,
  "icons": {
    "16": "images/playr-icon-16x16.png",
    "48": "images/playr-icon-48x48.png",
    "128": "images/playr-icon-128x128.png"
  },
  "permissions": [
    "system.display",
    "webview",
    "storage",
    "power",
    "alwaysOnTopWindows",
    "http://*.playr.biz/", "https://*.playr.biz/",
    "http://*.youtube.com/", "https://*.youtube.com/",
    "http://youtu.be/","http://y2u.be/",
    "http://*.vimeo.com/", "https://*.vimeo.com/",
    "http://*.yahooapis.com/","https://*.yahooapis.com/",
    "http://*.bizplay.com/", "https://*.bizplay.com/",
    "http://*.buienradar.com/","https://*.buienradar.nl/"
  ]
}
