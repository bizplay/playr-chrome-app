{
  "manifest_version": 2,
  "name": "Playr",
  "short_name": "Playr",
  "description": "Digital signage kiosk app for Chrome OS",
  "app": {
    "background": {
      "scripts": ["javascript/background.js"],
      "persistent": false
    }
  },
  "version": "1.0.5.0",
  "author": {
    "name": "Playr Digital Signage",
    "email": "support@playr.biz"
  },
  "kiosk_enabled": true,
  "offline_enabled": false,
  "minimum_chrome_version": "46",
  "icons": {
    "16": "images/playr-icon-16x16.png",
    "48": "images/playr-icon-48x48.png",
    "128": "images/playr-icon-128x128.png"
  },
  "permissions": [
    "system.display",
    "system.network",
    "system.cpu",
    "enterprise.deviceAttributes",
    "webview",
    "storage",
    "unlimitedStorage",
    "power",
    "alwaysOnTopWindows",
    "gcm",
    "app.window.fullscreen",
    "http://www.playr.biz/", "https://www.playr.biz/",
    "http://ajax.playr.biz/", "https://ajax.playr.biz/",
    "http://proxy.playr.biz/", "https://proxy.playr.biz/",
    "https://s3.amazonaws.com/",
    "http://www.youtube.com/", "https://www.youtube.com/",
    "http://youtu.be/","http://y2u.be/",
    "http://www.vimeo.com/", "https://www.vimeo.com/",
    "http://vimeo.com/", "https://vimeo.com/",
    "http://*.yahooapis.com/","https://*.yahooapis.com/",
    "http://*.bizplay.com/", "https://*.bizplay.com/",
    "http://*.buienradar.com/","https://*.buienradar.nl/"
  ],
  "webview": {
    "partitions": [
      {
        "name": "playr_signage_data",
        "accessible_resources": ["*.*"]
      }
    ]
  }
}
